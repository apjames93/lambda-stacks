{
  "compilerOptions": {
    "types": ["reflect-metadata", "jest", "node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/test-helpers/setupTests.ts"],
  "exclude": ["src/**/tests/*", "src/test-helpers/**"]
}