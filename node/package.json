{
    "name": "node-lambdas",
    "engines": {
        "node": "=16"
    },
    "scripts": {
        "start": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/index.ts'",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint src --fix",
        "clean-code": "npm run format && npm run lint",
        "build": "rm -rf .dist && npm run build:esbuild",
        "build:esbuild": "node esbuild.config.ts",
        "watch": "tsc -w --preserveWatchOutput",
        "test": "NODE_ENV=test jest --coverage --runInBand",
        "test:watch": "NODE_ENV=test jest --watch --runInBand",
        "sam:build": "rm -rf .aws-sam && npm run build && sam build",
        "sam:start": "npm run sam:build && sam local start-api"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.72",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/dotenv-safe": "^8.1.5",
        "@types/express": "^4.17.17",
        "@types/jest": "^28.1.1",
        "@types/node": "^18.0.0",
        "@types/stripe": "^8.0.417",
        "@types/uuid": "^8.3.4",
        "@types/validator": "^13.7.3",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "aws-sdk-mock": "^5.8.0",
        "body-parser": "^1.20.2",
        "concurrently": "^7.2.1",
        "cors": "^2.8.5",
        "crypt": "0.0.2",
        "dotenv": "^16.0.3",
        "dotenv-safe": "^8.2.0",
        "esbuild": "^0.14.14",
        "esbuild-jest": "^0.5.0",
        "esbuild-plugin-tsc": "^0.4.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "express": "^4.18.2",
        "fishery": "^2.2.2",
        "http-request-mock": "^1.7.17",
        "jest": "^28.1.1",
        "jest-junit": "^13.2.0",
        "js-yaml": "^4.1.0",
        "mockdate": "^3.0.5",
        "mysql": "^2.18.1",
        "mysql2": "^2.3.3",
        "node-async-exec": "^1.2.0",
        "nodemon": "^2.0.16",
        "pg-hstore": "^2.3.4",
        "prettier": "^2.6.2",
        "sequelize": "^6.21.0",
        "sequelize-cli": "^6.4.1",
        "sequelize-typescript": "^2.1.3",
        "ts-jest": "^28.0.4",
        "ts-node": "^10.8.1",
        "ts-node-dev": "^2.0.0",
        "tsc-watch": "^5.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "aws-sdk": "^2.1360.0",
        "cors": "^2.8.5"
    }
}
